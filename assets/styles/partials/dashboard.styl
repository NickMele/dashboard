.shows {
  .show {
    width: 45%;
    margin: 0 auto;
    margin-top: 2rem;
    background: white;
    box-shadow: 0 0 1rem 0 $base-shadow-color;
    font-weight: 300;
    &:target {
      box-shadow: 0 0 1rem 0 $green;
    }
    .show-banner {
      position: relative;
      img {
        width: 100%;
      }
    }
    .show-info {
      position: relative;
      .season-number {
        padding: 1rem;
        font-size: 2.5rem;
        position: absolute;
        width: 100%;
        z-index: 1;
        background: rgba(255,255,255,.8);
      }
      .episode-list {
        padding-top: 4.6rem;
        max-height: 25rem;
        overflow-y: auto;
        -webkit-overflow-scrolling: touch;
        &::-webkit-scrollbar { 
          display: none; 
        }
        li {
          border-top: 1px dotted $base-border-color;
          font-size: 1.1rem;
          // cursor: pointer;
          &.selected {
            background: $white-cream;
          }
          > .flex {
            padding: 1rem;
            align-items: center;
          }
          .search {
            padding-left: 1rem;
          }
          .airdate {
            color: $gray-light;
            padding-right: 1rem;
          }
          .title {
            flex: 1;
          }
          .status {
            padding: .3rem;
            border: 1px solid black;
            border-radius: 2px;
            text-transform: uppercase;
            font-size: 1rem;
            cursor: pointer;
            &.skipped {
              border-color: #bedeed;
              background: rgba(195, 227, 240, 0.7);
              color: #005678;
            }
            &.downloaded {
              border-color: #c3e3c8;
              background: rgba(201, 231, 204, 0.7);
              color: #047511;
            }
            &.wanted {
              border-color: #ffb0b0;
              background: rgba(255, 176, 176, 0.7);
              color: #850e0e;
            }
            &.unaired {
              border-color: #f5f1e4;
              background: rgba(245, 241, 228, 0.7);
              color: #836111;
            }
          }
          &:first-of-type {
            border-top: none;
          }
          &.latest-episode {
            p {
              color: $gray-light;
              font-size: 1.1rem;
              padding-bottom: 1rem;
              line-height: 1.3;
              width: 80%;
            }
          }
          .sab-info {
            margin-top: -1rem;
            padding: 1rem;
            position: relative;
            .flex {
              justify-content: space-between;
            }
            .progress {
              position: absolute;
              bottom: 0;
              left: 0;
              width: 25%;
              height: .3rem;
              background: $blue;
              opacity: .6;
            }
          }
        }
      }
    }
  }
}

.jumpto {
  position: fixed;
  top: 2rem;
  left: 1rem;
  background: $jumpto-background;
  box-shadow: 0 0 1rem 0 $base-shadow-color;
  width: 20%;
  -webkit-backface-visibility: hidden;
  h3 {
    padding: 1rem;
    border-bottom: 1px solid $base-border-color;
  }
  ul {
    li {
      padding: 1rem;
      font-size: 1.2rem;
      color: $gray-dark;
    }
  }
}